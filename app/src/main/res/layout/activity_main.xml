<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layoutMain" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/background"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jlmartin.es.colliseumofmaths.MainActivity">

    <Button
        android:id="@+id/comenzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coliseo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/backgroundbutton"
        android:text="@string/inicio" />

    <ImageView
        android:id="@+id/coliseo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/coliseo" />

    <ImageView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/coliseo"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/titulo" />

    <CheckBox
        android:id="@+id/dificil"
        style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/comenzar"
        android:layout_below="@+id/comenzar"
        android:layout_marginTop="32dp"
        android:background="@drawable/backgroundbutton"
        android:text="Dificil" />
</RelativeLayout>
